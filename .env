# ============================================
# ðŸŽ¯ DataBot - Configuration d'Environnement
# ============================================
# Copier ce fichier en .env et remplir les valeurs
# ============================================

# === API CONFIGURATION ===
MISTRAL_API_KEY=my keys
MODEL=mistral-small-latest
TEMPERATURE=0.1
MAX_TOKENS=1000

# === APPLICATION ===
APP_NAME=DataBot
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO
PORT=8501
HOST=0.0.0.0

# === DATABASE (Optionnel) ===
# DB_TYPE=sqlite  # sqlite, postgresql, mysql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=databot
# DB_USER=admin
# DB_PASSWORD=secret
# DB_PATH=data/business_data.db

# === PATHS ===
DATA_DIR=./data
LOG_DIR=./logs
REPORT_DIR=./reports
EXPORT_DIR=./exports
UPLOAD_DIR=./uploads

# === BUSINESS LOGIC ===
DEFAULT_CURRENCY=EUR
DATE_FORMAT=%Y-%m-%d
LANGUAGE=fr
TIMEZONE=Europe/Paris

# === THRESHOLDS ===
STOCK_WARNING_THRESHOLD=50
STOCK_CRITICAL_THRESHOLD=20
REVENUE_GOAL=100000
SALES_TARGET=1000

# === SECURITY ===
# SECRET_KEY=votre_secret_key_ici
# ENCRYPTION_KEY=votre_encryption_key_ici
SESSION_TIMEOUT=3600
MAX_UPLOAD_SIZE=10485760  # 10MB

# === PERFORMANCE ===
CACHE_ENABLED=True
CACHE_TTL=300
MAX_WORKERS=4
REQUEST_TIMEOUT=30

# === MONITORING ===
ENABLE_METRICS=True
ENABLE_LOGGING=True
LOG_RETENTION_DAYS=30

# === INTEGRATIONS (Futur) ===
# CRM_API_KEY=
# EMAIL_SMTP_SERVER=
# EMAIL_PORT=587
# EMAIL_USER=
# EMAIL_PASSWORD=

# === EXPERIMENTAL FEATURES ===
ENABLE_BETA=False
ENABLE_ANALYTICS=True
ALLOW_FILE_UPLOAD=True
